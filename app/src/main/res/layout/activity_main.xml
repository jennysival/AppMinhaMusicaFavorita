<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_fotoMain"
            android:layout_width="match_parent"
            android:layout_height="@dimen/altura_250"
            android:scaleType="centerCrop"
            android:src="@drawable/foto_retrato_emicida"
            android:contentDescription="@string/descricao_foto_emicida"/>

        <TextView
            android:id="@+id/tv_tituloMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Titulo Genérico"
            android:textSize="@dimen/tamanho_fonte_16"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margem_20"/>

        <TextView
            android:id="@+id/tv_subTituloMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="(subtitulo generico)"
            android:textColor="@color/black"
            android:textSize="@dimen/tamanho_fonte_10"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_letraMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margem_50"
            android:layout_marginBottom="@dimen/margem_20"
            android:layout_marginTop="@dimen/margem_20"
            android:textAlignment="center"
            tools:text="Letra da música será inserida aqui"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btn_detalhes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/texto_botao_detalhes"
            android:textAllCaps="true"
            android:layout_marginHorizontal="@dimen/margem_20"
            android:layout_marginBottom="@dimen/margem_50"/>


    </LinearLayout>


</ScrollView>